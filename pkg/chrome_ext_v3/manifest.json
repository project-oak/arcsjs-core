{
  "manifest_version": 3,
  "name": "ArcsExtV3",
  "version": "0.3.1",
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    },
    "default_title": "Open Tools"
  },
  "sandbox": {
    "pages": [
      "deploy/librarian/index.html",
      "viewer.html"
    ]
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["scripting"]
}